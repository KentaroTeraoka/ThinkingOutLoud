
<div class="main users_new">
  <div class="container">
    <div class="form_heading">ログイン</div>
    <div class="form users_form">
      <div class="form_body">
        <% if @error_message %>
          <div class="form_error">
            <%= @error_message %>
          </div>
        <% end %>
        <%=form_tag("/login") do%>
          <p>メールアドレス</p>
          <input name="email" value="<%=@email%>">
          <p>パスワード</p>
          <input type="password" name="password" value="<%=@password%>">
          <input type="submit" value="ログイン">
        <%end%>
      </div>
    </div>
  </div>
</div>